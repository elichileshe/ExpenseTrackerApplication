<UserControl x:Class="ExpenseTrackerApplication.View.UserControls.MenuSideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExpenseTrackerApplication.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="25*" />
                <RowDefinition Height="70*"/>

                <RowDefinition Height="15*"/>
            </Grid.RowDefinitions>


            <Label Name="appname" Content="ExpenseTracker" FontSize="20" FontStyle="Normal" Foreground="White"/>
            <Grid  Height="200" Width="80" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Name="btnDashboard" Grid.Row="0" FontSize="16" Content="Dashboard" Width="100" Height="35" HorizontalContentAlignment="Center" 
                        HorizontalAlignment="Center" Background="Transparent" Foreground="White" BorderBrush="Transparent" />

                <Button Name="btnExpenses" Grid.Row="1" FontSize="16" Content="Expenses" Width="100" Height="35" 
                        HorizontalAlignment="Center" Background="Transparent" Foreground="White"  BorderBrush="Transparent"  />

                <Button Name="btnManager" Grid.Row="2" FontSize="16" Content="Manager" Width="100" Height="35" 
                        HorizontalAlignment="Center" Background="Transparent" Foreground="White"  BorderBrush="Transparent"   />

                <Button Name="btnReports" Grid.Row="3" FontSize="16" Content="Reports" Width="100" Height="35" 
                        HorizontalAlignment="Center" Background="Transparent" Foreground="White"  BorderBrush="Transparent"  />

                <Button Name="btnLogout" Grid.Row="4" FontSize="16" Content="Log out" Width="100" Height="35" 
                        HorizontalAlignment="Center" Background="Transparent" Foreground="White"  BorderBrush="Transparent"  />
            </Grid>

            <Label Name="watermarktag" Content="Northrise Assignment Project By Mulenga Eli Chileshe" FontSize="10" Grid.Row="3" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom"  FontStyle="Normal" Foreground="White"/>

        </Grid>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="982,326,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
